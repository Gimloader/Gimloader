{
    "compilerOptions": {
        "target": "ES2022",
        "outFile": "packages/gimloader/types/types.d.ts",
        "declaration": true,
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "$assets/*": ["./assets/*"],
            "$src/*": ["./src/*"],
            "$core/*": ["./src/core/*"]
        }
    },
    "include": ["./src/api/api.ts", "./main.d.ts"]
}