{
    "compilerOptions": {
        "target": "ES2022",
        "declaration": true,
        "module": "es2022",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "$assets/*": ["./assets/*"],
            "$content/*": ["./src/content/*"],
            "$core/*": ["./src/content/core/*"],
            "$bg/*": ["./src/background/*"],
            "$types/*": ["./src/types/*"],
            "$shared/*": ["./src/shared/*"]
        }
    },
    "include": ["./src/api/api.ts", "./main.d.ts"]
}