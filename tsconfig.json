{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "jsx": "react",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "$assets/*": ["./assets/*"],
            "$content/*": ["./src/content/*"],
            "$core/*": ["./src/content/core/*"],
            "$bg/*": ["./src/background/*"],
            "$types/*": ["./src/types/*"],
            "$shared/*": ["./src/shared/*"]
        },
        "verbatimModuleSyntax": true,
        "noEmit": true
    },
    "include": ["./src/**/*.*", "main.d.ts"]
}